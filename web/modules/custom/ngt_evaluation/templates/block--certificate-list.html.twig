<div class="main" {{ attributes }}>
    <div class="picture title">
        <div class="item-sd">
            <figure>
                {{ drupal_field('field_fondo', 'taxonomy_term', 39, {type: 'image', settings: {image_style: '604x476'}}) }}
            </figure>
            <div class="text">
                <h2>Certificados</h2>
            </div>
        </div>    
    </div>
    <div class="box-content">
        <div class="box">
            <div class="contenido">
                <div class="views-element-container">
                    <div class="view view-contenidos view-id-contenidos">
                        {% if data is empty %}
                            <div class="message">
                                <p>No hay certificados disponible para visualizar</p>
                            </div>
                        {% else %}
                            <div class="view-content row">
                                    {% for key, item in data %}
                                        <div class="views-row">
                                            <div class="item">
                                                <div>
                                                    <h3 class="title">Curso: {{ item.title_course }}</h3>
                                                    <div class="description">
                                                        <p>Certificado: {{ item.id_certificate }}</p>
                                                    </div>
                                                    <div class="info">
                                                        <span class="author">{{ item.name_user }}</span>
                                                    </div>
                                                    <date>{{ item.date }}</date>
                                                    {% if item.url_download != '' %}
                                                        <div class="download">
                                                            <a id="download_certificate" class="certificate pdf" href="#" data-url="{{ item.url_download }}">Descargar</a>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>